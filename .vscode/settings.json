{
  "editor.formatOnSave": true,
  "[html]": {
    "editor.formatOnSave": false
  },
  "standard.enable": true,
  "standard.autoFixOnSave": true,
  "standard.validate": [
    {
      "language": "javascript",
      "autoFix": true
    }
  ],
  "files.associations": {
    "*.ejs": "html"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript"
  ]
}