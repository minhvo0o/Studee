<!DOCTYPE html>
<html lang="en">

<head>

  <%- include('../partials/meta'); %>

</head>

<body>

  <%- include('../partials/header') %>
  
  <section class="contact-us" id="contact">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-9">
          <div id="contact">
            <div class="row text-center"><h2 class="mb-0">Hồ sơ cá nhân</h2></div>
            <div class="row fs-5 mx-2 my-5 flex-row"><div class="col"><b>Tên đăng nhâp: </b> <%= user.username    %></div></div>
            <div class="row fs-5 mx-2 my-5 flex-row"><div class="col"><b>Họ:            </b> <%= user.lastName    %></div></div>
            <div class="row fs-5 mx-2 my-5 flex-row"><div class="col"><b>Tên:           </b> <%= user.firstName   %></div></div>
            <div class="row fs-5 mx-2 my-5 flex-row"><div class="col"><b>Giới tính:     </b> <%= gender           %></div></div>
            <div class="row fs-5 mx-2 my-5 flex-row"><div class="col"><b>Email          </b> <%= user.email       %></div></div>
            <div class="row fs-5 mx-2 my-5 flex-row"><div class="col"><b>Điện thoại:    </b> <%= user.phoneNumber %></div></div>
            <div class="row fs-5 mx-2 my-5 flex-row"><div class="col"><b>Loại tài khoản:</b> <%= userType         %></div></div>
            <div class="col-lg-12">
              <div class="main-button-red pt-3 d-flex justify-content-around border-top">
                <a class="fs-5" href="profile/edit">Chỉnh sửa</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('../partials/courses-list'); %>

  <%- include('../partials/footer'); %>

  
</body>

</html>