<!DOCTYPE html>
<html lang="en">

<head>

  <%- include('../partials/meta'); %>

</head>

<body>

  <%- include('../partials/header') %>
  
  <section class="contact-us" id="contact">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-9 align-self-center">
          <div id="contact">
            <form id="contact" action="/profile/update" method="post">
              <div class="row d-flex justify-content-center">
                <h2 class="mb-2 text-center">Chỉnh sửa hồ sơ cá nhân</h2>
              </div>
              <div class="row">
                <fieldset><input value="<%= user.lastName %>"    required name="lastName"    type="text"     placeholder="Họ"></fieldset>
                <fieldset><input value="<%= user.firstName %>"   required name="firstName"   type="text"     placeholder="Tên"></fieldset>
                <fieldset><input value="<%= user.email %>"       required name="email"       type="email"    placeholder="Email" pattern="[^ @]*@[^ @]*" ></fieldset>
                <fieldset><input value="<%= user.phoneNumber %>" required name="phoneNumber" type="text"     placeholder="Số điện thoại">
                </fieldset>
                <div class="d-flex justify-content-around">
                  <div><input class="me-3" style="height: auto; width: auto;" type="radio" name="gender" value="male">Nam</div>
                  <div><input class="me-3" style="height: auto; width: auto;" type="radio" name="gender" value="female">Nữ</div>
                </div>
                <div class="d-flex justify-content-around">
                  <div><input class="me-3" style="height: 20px; width: auto;" type="radio" name="typeUser" value="user">Người học</div>
                  <div><input class="me-3" style="height: 20px; width: auto;" type="radio" name="typeUser" value="teacher">Người dạy</div>
                </div>
              </div>
              
              <div class="col-lg-12 d-flex justify-content-center">
                <fieldset><button type="submit" id="form-submit" class="button">Gữi</button></fieldset>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    </div>
  </section>

  <%- include('../partials/footer'); %>

  
</body>

</html>